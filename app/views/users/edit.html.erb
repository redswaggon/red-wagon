<h2>Edit <%= @user.username %>'s Wagon</h2>

<%= form_for @user, url:{action: :update, controller: :users, id: @user.id} do |f| %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
  </div>

  <div class="field">
    <%= collection_select :user, :neighborhoods, Neighborhood.all, :id, :name %><br>
  </div>

  <div class="field">
    <% @user.items.each do |item| %>
      <%= f.fields_for item do |item_form| %>

        <%= f.label :name %><br>
        <%= item_form.text_field :name %><br>

        <%= f.label :photo %><br>
        <%= item_form.file_field :photo %><br>

      <% end %>
    <% end %>
  </div>

  <%= f.submit "Submit Changes" %>

<% end %>
