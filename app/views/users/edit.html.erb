<h2>Edit <%= @user.username %>'s Wagon</h2>

<%= form_for @user, url:{action: :update, controller: :users, id: @user.id} do |f| %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
  </div>

  <div class="field">
    <%= collection_select :user, :neighborhoods, Neighborhood.all, :id, :name %>
  </div>

  <%= f.submit "Submit Changes" %>

<% end %>
