<div class="row">
  <div class="col-sm-3 col-md-3 col-lg-3"></div>
  
  <div class="col-sm-6 col-md-6 col-lg-6">
    <div class="edit-form">
      <div class="panel panel-primary">
        
        <div class="panel-heading">
          <h2 class="panel-title text-center">Edit <%= @user.username %>'s Wagon</h2>
        </div>

        <div class="panel-body">
          <%= form_for @user, url:{action: :update}, class: "form-signin" do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control input-standard" %>
            </div>

            <div class="form-group">
              <%= f.label :username %>
              <%= f.text_field :username, class: "form-control input-standard" %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control input-standard" %><br>
            </div>

            <div class="form-group">
              <%= collection_select :neighborhood, :neighborhoods, Neighborhood.all, :id, :name, {selected: @user.neighborhoods.first.id.to_s}, {class: "form-control input-standard"} %><br>
            </div>

            <%= f.submit "Submit Changes", class: "btn btn-success btn-hg btn-block" %>
          <% end %>
          <br>
        </div>
      </div> <!-- End of panel -->
      <p><%= button_to 'Delete your account', @user, method: :delete, class: "btn btn-danger" %></p>
    </div>
  </div>
      
  <div class="col-sm-3 col-md-3 col-lg-3"></div>
</div>