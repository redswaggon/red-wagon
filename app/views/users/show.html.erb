<h2>Hello <%= @user.username %>!</h2>

<h3>Here is your info.</h3>

<%= @user.name %><br>
<%= @user.email %><br>

<span class="edit_link">Edit your profile</span>

<p><%= button_to 'Delete your account', @user, method: :delete %></p>

<div class="photos">
  <% @user.items.each do |item| %>
    <div class="photo">
      <%= image_tag item.photo.url(:square) %><br>
      <%= item.name %><br>
    </div>
  <% end %>
</div>

<div id="cover"></div>

<iframe id="edit_frame" width="300px" height="200px" src="<%= edit_user_path %>">
  </iframe>

