<img src="/assets/wagon.png" class="bg">
<div class="row">  
  <div class="col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
    <div class="edit-form">
      <div class="panel panel-primary">
        
        <div class="panel-heading">
          <h2 class="panel-title text-center">Make Your Wagon</h2>
        </div>

        <div class="panel-body">
          <%= form_for @user, url:{action: :create, controller: :users, id: @user.id, class: "form-signin"} do |f| %>
            <div class="form-group">
              <%= f.text_field :name, :class => "form-control input-standard", :placeholder => "tell us yo name" %>
            </div>

            <div class="form-group">
              <%= f.text_field :username, :class => "form-control input-standard", :placeholder => "make up a badass username" %>
            </div>

            <div class="form-group">
              <%= f.text_field :email, :class => "form-control input-standard", :placeholder => "email?" %>
            </div>

             <div class="form-group">
              <%= f.text_field :password, :class => "form-control input-standard", :placeholder => "password?" %>
            </div>

             <div class="form-group">
              <%= f.text_field :password_confirmation, :class => "form-control input-standard", :placeholder => "password again, please"  %>
            </div>

            <div class="field">
              <%= collection_select :neighborhood, :neighborhoods, Neighborhood.all, :id, :name, {}, {:class => "form-control input-standard"} %>
            </div><br>

            <button type="submit" class="btn btn-success btn-hg btn-block">Submit Changes</button>
          <% end %>
        </div>
      </div> <!-- End of panel -->
    </div>
  </div>      
</div>