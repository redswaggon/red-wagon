<div id="user_nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  <% end %>
</div>

<%= form_for @user, action: "update", controller: "user" do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= collection_select :user, Neighborhood.all, :id, :name %>
  
  <%= f.submit "Submit Changes" %>

<% end %>