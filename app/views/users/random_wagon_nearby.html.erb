<div class="container">
  <div class="row">
    <h1 class="text-center"><%= @stranger.username.capitalize %>'s Wagon</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 col-md-10 col-lg-10 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 photos-stranger" style="background: #888">
    <div class="photos-stranger">
      <% @stranger.items.each do |item| %>
        <div class="photo-stranger">
          <%= image_tag item.photo.url(:square) %><br>
          <p class="text-center"><%= item.name %></p><br>
        </div>
      <% end %><br>
    </div>
  </div> <!-- End of photos div -->
</div> <!-- End of wagon row -->

<div class="row">
  <div class="container">
      <% if Like.where(user_id: @user.id, liked_user_id: @stranger.id).empty? %>
        <span id="<%= @user.id %>" class="<%= @stranger.id %>"><%= link_to "Like", create_like_path, {id: "like_button", class: "not_yet_liked"} %></span>
      <% else %>
        <span id="<%= @user.id %>" class="<%= @stranger.id %>"><%= link_to "Like", create_like_path, {id: "like_button", class: "already_liked"} %></span>
      <% end %><br>

      <%= link_to "Next Wagon", random_wagon_nearby_path(username: @user.username), id: "next_wagon_button" %>
  </div>
</div>