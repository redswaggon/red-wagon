<%= form_tag sessions_path, {class: "navbar-form navbar-right"} do %>
  <div class="form-group">
    <%= text_field_tag :username, nil, {type: "text", placeholder: "Username", class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= text_field_tag :password, nil, {type: "password", placeholder: "Password", class: "form-control"} %>
  </div>
  <%= submit_tag "Login", class: "btn btn-success" %>
  <div class="form-group">
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-primary" %>
  </div>
<% end %>
